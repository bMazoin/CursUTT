<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewModels.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp" />

    <Button
        android:id="@+id/main_addButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_recyclerView"
        android:layout_margin="50dp"
        android:layout_centerHorizontal="true"
        android:text="Ajouter un nouveau cursus" />

    <Button
        android:id="@+id/main_resetButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_addButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:text="RÃ©initialiser la liste de cursus" />

</RelativeLayout>